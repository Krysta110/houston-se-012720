<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <li style="color: red">
        <%= e %>
        </li>
    <% end %>
<% end %>


<%= form_for @movie do |f|  %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :year %>
<%= f.text_field :year %>

<%= f.label :actors %>
<%= f.collection_check_boxes :actor_ids, @actors, :id, :name%>

<%= f.submit %>

<% end %>